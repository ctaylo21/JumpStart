{
  "name": "jumpstart",
  "version": "0.0.1",
  "description": "ES6 module starter kit with Webpack, Babel, and Jest",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctaylo21/JumpStart.git"
  },
  "keywords": [
    "es6",
    "javascript",
    "webpack",
    "babel",
    "jest",
    "standardjs"
  ],
  "author": "Caleb Taylor <caleb89taylor@gmail.com",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --open --config webpack/dev.js",
    "build": "webpack -p --config webpack/prod.js",
    "test": "standard && jest --coverage",
    "tdd": "jest --watch",
    "tdd:web": "webpack-dev-server --inline --progress --open --config webpack/webTest.js"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      ".tmp",
      "test"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.4.2",
    "node-sass": "^4.8.2",
    "path": "^0.12.7",
    "sass-loader": "^6.0.7",
    "standard": "^10.0.3",
    "style-loader": "^0.20.3",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.2",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {},
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "it",
      "afterEach",
      "expect"
    ]
  }
}
