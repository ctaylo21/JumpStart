{
  "name": "jumpstart",
  "version": "0.0.2",
  "description": "ES6 module starter kit with Webpack, Babel, Mocha, Chai, Sinon, and Istanbul",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctaylo21/JumpStart.git"
  },
  "keywords": [
    "es6",
    "javascript",
    "mocha",
    "chai",
    "sinon",
    "webpack",
    "babel",
    "istanbul",
    "standardjs"
  ],
  "author": "Caleb Taylor <caleb89taylor@gmail.com",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "start": "webpack-serve --open --config webpack/dev.js",
    "build": "webpack --progress --config webpack/prod.js",
    "test": "standard && cross-env NODE_ENV=test ./node_modules/nyc/bin/nyc.js mocha-webpack",
    "tdd": "mocha-webpack --watch",
    "tdd:web": "webpack-serve --open --config webpack/test.js",
    "lint": "standard",
    "stats": "webpack --progress --config webpack/stats.js"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "test"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "babel-loader": "^8.0.0-beta.3",
    "babel-plugin-istanbul": "^4.1.6",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "11.3.0",
    "jsdom-global": "3.0.2",
    "mini-css-extract-plugin": "^0.4.0",
    "mocha": "^5.2.0",
    "mocha-webpack": "^2.0.0-beta.0",
    "node-sass": "^4.9.0",
    "nyc": "^11.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.2",
    "path": "^0.12.7",
    "sass-loader": "^6.0.7",
    "sinon": "^4.5.0",
    "standard": "^10.0.3",
    "webpack": "^4.10.2",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^2.1.5",
    "webpack-merge": "^4.1.2",
    "webpack-serve": "^0.3.2"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "it",
      "afterEach",
      "assert"
    ]
  }
}
