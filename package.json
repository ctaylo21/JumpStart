{
  "name": "jumpstart",
  "version": "0.0.2",
  "description": "ES6 module starter kit with Webpack, Babel, Mocha, Chai, Sinon, and Istanbul",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctaylo21/JumpStart.git"
  },
  "keywords": [
    "es6",
    "javascript",
    "mocha",
    "chai",
    "sinon",
    "webpack",
    "babel",
    "istanbul",
    "standardjs"
  ],
  "author": "Caleb Taylor <caleb89taylor@gmail.com",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --open --config webpack/dev.js",
    "build": "webpack -p --config webpack/prod.js",
    "test": "standard && cross-env NODE_ENV=test ./node_modules/nyc/bin/nyc.js mocha-webpack",
    "tdd": "mocha-webpack --watch",
    "tdd:web": "webpack-dev-server --inline --progress --open --config webpack/test.js"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "test"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "babel-loader": "^8.0.0-beta",
    "babel-plugin-istanbul": "^4.1.6",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-alpha.0",
    "html-webpack-plugin": "^3.0.8",
    "jsdom": "11.3.0",
    "jsdom-global": "3.0.2",
    "mocha": "^5.0.4",
    "mocha-webpack": "^2.0.0-beta.0",
    "node-sass": "^4.8.2",
    "nyc": "^11.6.0",
    "path": "^0.12.7",
    "sass-loader": "^6.0.7",
    "sinon": "^4.4.6",
    "standard": "^10.0.3",
    "style-loader": "^0.20.3",
    "webpack": "^4.0.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.0.0",
    "webpack-merge": "^4.1.2"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "it",
      "afterEach"
    ]
  }
}
